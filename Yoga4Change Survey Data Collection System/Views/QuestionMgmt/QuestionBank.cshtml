
@model IEnumerable<Yoga4Change_Survey_Data_Collection_System.Models.Question>
@{
    ViewBag.Title = "QuestionBank";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Question Bank</title>
</head>
<body>


    <button type="button"> <a asp-area="" asp-controller="QuestionMgmt" asp-action="AddQuestion">Add Question</a></button>

    <table class="table">
        <thead>
            <tr>
                <th class="text-center">ID</th>
                <th class="text-center">Content</th>
                <th class="text-center">Type</th>
                <th class="text-center">Created</th>
                <th class="text-center">Modfied</th>
                <th colspan="3" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
            <tr>
                <td>@r.ID</td>
                <td>@r.Content</td>
                <td>@r.TypeId</td>
                <td>@r.CreatedAt</td>
                <td>@r.LastModifiedAt</td>
                <td>Edit</td>
                <td>Duplicate</td>
                <td>@Html.ActionLink("Delete", "DeleteQuestion", new { id = r.ID}, new{@class = "btn btn-danger"})</td>
            </tr>
            }
        </tbody>
    </table>
</body>
</html>
