
@model List<Yoga4Change_Survey_Data_Collection_System.Models.Question>
@{
    ViewBag.Title = "QuestionBank";
}
<head>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.4/css/jquery.dataTables.css">

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.4/js/jquery.dataTables.js" defer></script>


</head>

<body>
    <div><button type="button" class="btn btn-outline-primary"> <a asp-controller="QuestionMgmt" asp-action="AddQuestion">Add Question</a></button><br /></div>

    <div>
    <table id="questionstable" class="table table-striped table-bordered dt-responsive" style="table-layout: auto;width: 100%;" cellspacing="0">
        <thead>
            <tr>
                <th><label asp-for="@Model.FirstOrDefault().ID"></label></th>
                <th><label asp-for="@Model.FirstOrDefault().Content"></label></th>
                <th><label asp-for="@Model.FirstOrDefault().TypeId"></label></th>
                <th><label asp-for="@Model.FirstOrDefault().CreatedAt"></label></th>
                <th><label asp-for="@Model.FirstOrDefault().LastModifiedAt"></label></th>
                <th>Edit</th>
                <th>Duplicate</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.ID</td>
                    <td>@r.Content</td>
                    <td>@r.TypeId</td>
                    <td>@r.CreatedAt</td>
                    <td>@r.LastModifiedAt</td>
                    <td>@Html.ActionLink("Edit", "UpdateQuestion", new { id = r.ID }, new { @class = "btn btn-success" })</td>
                    <td>Duplicate</td>
                    <td>@Html.ActionLink("Delete", "DeleteQuestion", new { id = r.ID }, new { @class = "btn btn-danger" })</td>
                </tr>
            }
        </tbody>
    </table>
        </div>
</body>

<script>

    $(document).ready(function () {

        $('#questionstable').DataTable();
    });

</script>


