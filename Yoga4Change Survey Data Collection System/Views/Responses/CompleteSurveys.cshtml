@model List<Yoga4Change_Survey_Data_Collection_System.Models.Response>
@{
    ViewBag.Title = "CompleteSurveys";
}
<head>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/dt-1.11.5/b-2.2.2/datatables.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs5/dt-1.11.5/b-2.2.2/datatables.min.js"></script>


</head>
<body>
    <div>
        <table id="responsetable" class="table table-striped table-bordered dt-responsive" style="table-layout: auto;width: 100%;" cellspacing="0">
            <thead>
                <tr>
                    <th><label asp-for="@Model.FirstOrDefault().Response_ID"></label></th>
                    <th><label asp-for="@Model.FirstOrDefault().Question_ID"></label></th>
                    <th><label asp-for="@Model.FirstOrDefault().Survey_ID"></label></th>
                    <th><label asp-for="@Model.FirstOrDefault().Response_Content"></label></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var response in Model)
                {
                    <tr>
                        <td>@response.Response_ID</td>
                        <td>@response.Question_ID</td>
                        <td>@response.Survey_ID</td>
                        <td>@response.Response_Content</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
<script>
    $("#responsetable").DataTable({
        dom: "Bfrtip",
        buttons: [
            {
                extend: "excel",                    // Extend the excel button
                excelStyles: [                      // Add an excelStyles definition
                    {
                        template: "green_medium",   // Apply the "green_medium" template
                    },
                    {
                        cells: "sh",                // Use Smart References (s) to target the header row (h)
                        style: {                    // The style definition
                            font: {                 // Style the font
                                size: 14,           // Size 14
                                b: false,           // Turn off the default bolding of the header row
                            },
                            fill: {                 // Style the cell fill
                                pattern: {          // Add a pattern (default is solid)
                                    color: "1C3144" // Define the fill color
                                }
                            }
                        }
                    }
                ]
            },
        ],
    });
</script>
